<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/img_bus_chat_numbering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bus_icon_bkg"
        android:focusable="false"
        android:gravity="center"
        android:padding="2dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textV_bus_chat_item_titele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/img_bus_chat_numbering"
        android:singleLine="true"
        android:text="Indiana-Hyde Park"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textV_bus_chat_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_bus_chat_numbering"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_bus_chat_numbering"
        android:singleLine="true"
        android:layout_marginTop="3dp"
        android:text="Planned Reroute"
        android:textSize="12sp" />
    
    

</RelativeLayout>