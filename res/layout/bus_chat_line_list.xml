<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sizesOfHeader"
        android:layout_toLeftOf="@+id/btn_home_bus_chat_line"
        android:background="@drawable/bg_search" >

        <RelativeLayout
            android:id="@+id/rel_header_img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"  
            android:layout_centerVertical="true"          
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <Button
                android:id="@+id/img_bus_chat_line_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bus_icon_bkg"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="23"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textV_bus_chat_line_item_titele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/img_bus_chat_line_title"
                android:layout_toRightOf="@+id/img_bus_chat_line_title"
                android:singleLine="true"
                android:text="Blue Line"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textV_bus_chat_line_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textV_bus_chat_line_item_titele"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_bus_chat_line_title"
                android:singleLine="true"
                android:text="Bus Chat"
                android:textSize="12sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_home_bus_chat_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/home_btn" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_view_bus_chat_line"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        android:divider="#00000000"
        android:smoothScrollbar="true" >
    </ListView>

</RelativeLayout>